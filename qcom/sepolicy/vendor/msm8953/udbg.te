type udbg, domain;
type udbg_exec, exec_type, vendor_file_type,file_type;

#typeattribute udbg mlstrustedsubject;

init_daemon_domain(udbg)
domain_auto_trans(init, udbg_exec, udbg)
domain_auto_trans(shell, udbg_exec, udbg)

allow udbg udbg_exec:file { rx_file_perms entrypoint };
allow udbg vendor_shell_exec:file {rx_file_perms entrypoint };
allow udbg vendor_toolbox_exec:file  rx_file_perms;
allow udbg { system_file rootfs vendor_shell_exec }:file execute_no_trans;
r_dir_file(udbg, proc_kmsg)
allow udbg proc_kmsg:file r_file_perms;
allow udbg kmsg_device:chr_file r_file_perms;
allow udbg console_device:chr_file rw_file_perms;
allow udbg kernel:system syslog_read;

not_full_treble(`allow udbg shell_exec:file rx_file_perms;')
full_treble_only(`allow udbg vendor_shell_exec:file rx_file_perms;')
not_full_treble(`allow udbg toolbox_exec:file rx_file_perms;')
full_treble_only(`allow udbg vendor_toolbox_exec:file rx_file_perms;')
get_prop(udbg, vendor_tee_listener_prop)

get_prop(udbg, sys_get_kmsg);
set_prop(udbg, sys_get_kmsg);
